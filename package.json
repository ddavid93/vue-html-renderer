{
  "name": "vue-html-renderer",
  "version": "1.0.0",
  "description": "A powerful and flexible Vue library for rendering arbitrary HTML content with two distinct rendering modes: Direct Mode (with script execution) and Shadow Mode (with style isolation)",
  "type": "module",
  "module": "./dist/vue-html-renderer.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/vue-html-renderer.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" -- && pnpm run build:types",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "build:types": "vue-tsc --project tsconfig.build.json",
    "type-check": "vue-tsc --build --force",
    "lint:oxlint": "oxlint . --fix -D correctness --ignore-path .gitignore",
    "install-packages": "pnpm install",
    "lint:eslint": "eslint . --fix",
    "lint": "run-s lint:*",
    "format": "prettier --write ."
  },
  "peerDependencies": {
    "vue": ">=2.7.0 || ^3.0.0"
  },
  "devDependencies": {
    "@prettier/plugin-oxc": "0.0.4",
    "@tsconfig/node22": "22.0.2",
    "@types/jsdom": "27.0.0",
    "@types/node": "24.7.0",
    "@vitejs/plugin-vue": "6.0.1",
    "@vitest/eslint-plugin": "1.3.16",
    "@vue/eslint-config-prettier": "10.2.0",
    "@vue/eslint-config-typescript": "14.6.0",
    "@vue/test-utils": "2.4.6",
    "@vue/tsconfig": "0.8.1",
    "eslint": "9.37.0",
    "eslint-plugin-oxlint": "1.20.0",
    "eslint-plugin-vue": "10.5.0",
    "jiti": "2.6.1",
    "jsdom": "27.0.0",
    "npm-run-all2": "8.0.4",
    "oxlint": "1.20.0",
    "prettier": "3.6.2",
    "typescript": "5.9.3",
    "vite": "npm:rolldown-vite@7.1.16",
    "vite-plugin-dts": "4.5.4",
    "vitest": "3.2.4",
    "vue": "3.5.22",
    "vue-tsc": "3.1.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "packageManager": "pnpm@10.18.1"
}
